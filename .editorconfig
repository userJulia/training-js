# https://editorconfig.org

root = true

[*]
charset = utf-8
curly_bracket_next_line = false
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
quote_type = single
max_line_length = 80
spaces_around_brackets = true
spaces_around_operators = true
trim_trailing_whitespace = true
