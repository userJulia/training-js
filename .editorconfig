# https://editorconfig.org

root = true

[*]
charset = utf-8
curly_bracket_next_line = false
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
quote_type = single
spaces_around_brackets = false
spaces_around_operators = true
trim_trailing_whitespace = true

[*.{html,css}]
quote_type = double
